% various
%
\providecommand{\abs}[1]{\mleft\lvert{#1}\mright\rvert} % absolute value
\providecommand*{\defas}{\circeq}                       % defined as
\providecommand*{\inv}[1]{{#1}^{-1}}                    % inverse
\providecommand*{\parens}[1]{\mleft({#1}\mright)}       % parentheses
\providecommand*{\vat}[1]{\parens{#1}}                  % value of a function at a point

% text in math mode
%
\providecommand*{\eqtxt}[1]{\mleft\lbrack\text{\footnotesize{#1}}\mright\rbrack} % text in math environments
\providecommand*{\sbce}[1]{_{\ce{#1}}}                                           % chem subscript
\providecommand*{\sbtxt}[1]{_\text{\textsf{#1}}}                                 % subscript

% set
%
\providecommand*{\lset}[1]{\mleft\lbrace{#1}\mright\rbrace}         % listing a set
\providecommand*{\bset}[2]{\mleft\lbrace{#1}\mid{#2}\mright\rbrace} % building a set
%
\providecommand*{\svoid}{\cancel{\mathrm{O}}} % void (empty) set
%
% special sets
%
\providecommand*{\specialset}[1]{\mathbb{#1}} % special number sets
%
% number sets
%
\providecommand*{\compl}{\specialset{C}} % complex
\providecommand*{\ints}{\specialset{Z}}  % integers
\providecommand*{\nats}{\specialset{N}}  % naturals (includes zero)
\providecommand*{\odds}{\specialset{O}}  % odds
\providecommand*{\rats}{\specialset{Q}}  % rationals
\providecommand*{\reals}{\specialset{R}} % reals
%
\providecommand*{\espace}{\specialset{E}} % euclidean space (a real space with metric)
%
\providecommand*{\nonneg}[1]{{#1}^{+}} % non-negative (+ and 0)
\providecommand*{\nonpos}[1]{{#1}^{-}} % non-positive (- and 0)
%
\providecommand*{\notzero}[1]{{#1}^{\prime}} % zero not included
%
\providecommand*{\strneg}[1]{\nonpos{\notzero{#1}}} % strictly negative
\providecommand*{\strpos}[1]{\nonneg{\notzero{#1}}} % strictly positive
%
\providecommand*{\posnats}{\nonneg{\nats}}    % positive naturals (excludes zero)
\providecommand*{\xreals}{\overline{\reals}}  % extended real numbers (to include +/- infinity)
%
% operations on sets
%
\providecommand*{\fscard}[1]{\mleft\lvert{#1}\mright\rvert} % (finite) set cardinality
%
\providecommand*{\sdiff}{\setminus}       % set difference
\providecommand*{\ssdiff}{\bigtriangleup} % set symmetric difference
\providecommand*{\sinter}{\cap}           % set intersection
\providecommand*{\sprod}{\times}          % set (Cartesian) product
\providecommand*{\sunion}{\cup}           % set union
%
\providecommand*{\sset}{\subseteq} % subset
\providecommand*{\psset}{\subset}  % proper subset

% topology
%
\providecommand*{\sopen}[1]{{#1}^{\circ}} % open set (set open)
\providecommand*{\sbound}{\partial}       % set boundary

% functions
%
\providecommand*{\fdef}[3]{{#1}\coloncolon{#2}\to{#3}}     % function definition
\providecommand*{\fmap}[3]{{#1}\coloncolon{#2}\mapsto{#3}} % function as map (function defined with equation)
%
\providecommand*{\fcomp}{\circ} % function composition
%
\providecommand*{\fdclass}[1]{C^{#1}} % function class wrt differentiation

% tuples
%
\providecommand*{\tuple}[1]{\mleft\langle{#1}\mright\rangle}  % tuple

% math constants
%
\providecommand*{\kpi}{\uppi}
\providecommand*{\ke}{\mathrm{e}}
\providecommand*{\ki}{\mathrm{i}}
\providecommand*{\ktau}{\uptau}

% logic
%
\renewcommand{\implies}{\rightarrow}
\renewcommand{\iff}{\leftrightarrow}
%
\providecommand*{\derives}{\vdash}  % is derivable from
\providecommand*{\unique}{\exists!} % exists exactly one
%
\providecommand*{\dquant}{\mathpzc{D}} % domain of quantification
\providecommand*{\tset}{\mathpzc{T}}   % truth set
%
%\providecommand*{\udisc}{\mathpzc{U}}  % universe of discourse
%
\providecommand*{\udisc}{U}  % universe of discourse
%
\providecommand*{\wehave}{\br} % we have
\providecommand*{\such}{\,.\,} % such that
%
\providecommand*{\grensty}[2]{\Gamma,{#1}\derives{#2},\Delta} % grentzen style of deduction

% integers
%
\providecommand*{\ceil}[1]{\mleft\lceil{#1}\mright\rceil}    % ceiling
\providecommand*{\floor}[1]{\mleft\lfloor{#1}\mright\rfloor} % floor

% sequences and sums
%
% sequences
%
\providecommand*{\cseq}[4]{\mleft.{#1}_{#2}\mright\rvert_{#3}^{#4}}   % compact notation
\providecommand*{\fseq}[3]{\parens{#1}_{#2}^{#3}}                     % formula sequence
\providecommand*{\lseq}[1]{\parens{#1}}                               % listed sequence
%
% sums
%
\providecommand*{\gsum}[1]{\sum_{\mathclap{\substack{#1}}}}         % generalized sigma notation
\providecommand*{\iverson}[1]{\mleft\lbrack{#1}\mright\rbrack}      % iverson brackets
\providecommand*{\ivsum}[3]{\sum_{\mathclap{#1}}{#2}\;\iverson{#3}} % sum with iverson notation

% calculus
%
% derivatives
%
\providecommand*{\iod}[1]{\mathrm{d}_{#1}}     % indexed ordinary derivative
\providecommand*{\ipd}[1]{\partial_{#1}}       % indexed partial derivative
\providecommand*{\nipd}[2]{\partial^{#1}_{#2}} % n-th indexed partial derivative
%
\providecommand*{\xod}[2]{\dfrac{d{#2}}{d{#1}}}                     % expanded ordinary derivative
\providecommand*{\xpd}[2]{\dfrac{\partial{#2}}{\partial{#1}}}       % expanded partial derivative
\providecommand*{\cxpd}[2]{\dfrac{\partial{#1}}{\partial{#2}}}      % corrected expanded partial derivative
\providecommand*{\nxpd}[3]{\dfrac{\partial^{#1}{#2}}{\partial{#3}}}
%
\providecommand*{\dt}[1]{\dot{#1}} % derivative with respect to time

% tensors
%
\let\div\idiv
\DeclareMathOperator{\div}{div}   % divergence
\DeclareMathOperator{\curl}{curl} % curl
\DeclareMathOperator{\grad}{grad} % gradient
\DeclareMathOperator{\lap}{lap}   % laplacian
%
% products
%
\providecommand*{\iprod}{\cdot} % inner product

% geometry
%
\providecommand*{\area}{a}                 % area of a measurable set
\providecommand*{\region}[1]{\mathpzc{#1}} % region in space
%
\providecommand*{\depth}{h}  % depth
\providecommand*{\height}{h} % height
\providecommand*{\length}{l} % length
\providecommand*{\thick}{t}  % thickness
\providecommand*{\width}{w}  % width
%
\providecommand*{\diam}{d}   % diameter
\providecommand*{\radius}{r} % radius
%
\providecommand*{\bound}{\partial} % boundary
\providecommand*{\curve}{\gamma}   % curve
\providecommand*{\surf}{s}         % surface
\providecommand*{\vol}{v}          % volume
%
% scaling
%
\providecommand*{\omag}[1]{o\vat{#1}} % order-of-magnitude
\providecommand*{\scales}{\propto}    % scales as
%
\providecommand*{\scq}[1]{{#1}\sbtxt{sc}} % scaled quantity
\providecommand*{\dlq}[1]{\overline{#1}}  % dimensionless quantity
